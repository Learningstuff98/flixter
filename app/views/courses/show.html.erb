<br />

<div class="booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <%= image_tag @course.image.url, class: 'img-fluid' if !@course.image.url.nil? %>
  <br />
    <div class='row'> 
      <div class="col-sm-4 col-12 text-center">
        <%= number_to_currency @course.cost %>

      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Adminstriator', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% end %>
    </div>

    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <div class='col-12'>
    <% @course.sections.each do |section| %>
      <br />
      <div class='section text-center'>
        <h3><%= section.title %></h3>
        <br />
        <div class="row">
        <% section.lessons.each do |lesson| %>
        <div class="col-12 col-sm-6">
          <div class='lesson'>
            <%= link_to lesson_path(lesson) do %>
              <b><%= lesson.title %></b>
              <br />
              <%= lesson.subtitle %>
            <% end %>
          </div>
          </div>
        <% end %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
</div>